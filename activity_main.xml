<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:background="@color/backGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCalcDisplay"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:paddingTop="72dp"
        android:background="@color/textViewBackGround"
        android:textAlignment="viewEnd"
        android:textColor="#EAD9D9"
        android:textSize="63sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:orientation="horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" >

        <Button
            android:id="@+id/btnCE"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:text="@string/btnAString"
            android:onClick="onClear"
            android:layout_marginStart="4dp"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/sqrt"
            android:layout_width="108dp"
            android:onClick="onSqRt"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/sqrt"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="108dp"
            android:onClick="onOperator"
            android:layout_height="match_parent"
            android:text="@string/btnPString"
            android:layout_marginEnd="4dp"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="63sp"
        android:orientation="horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" >
        <Button
            android:id="@+id/add"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:onClick="onOperator"
            android:layout_marginStart="4dp"
            android:text="@string/btnBString"
            android:textSize="22sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/subtract"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:onClick="onOperator"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/btnCString"
            android:textSize="32sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="108dp"
            android:onClick="onOperator"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:text="@string/mult"
            android:textSize="20sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:orientation="horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604" >
        <Button
            android:id="@+id/btn7"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:onClick="onDigit"
            android:text="@string/btnDString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnEString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnFString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:orientation="horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" >
        <Button
            android:id="@+id/btn4"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:onClick="onDigit"
            android:text="@string/btnGString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnHString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnIString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:orientation="horizontal"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" >
        <Button
            android:id="@+id/btn1"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:onClick="onDigit"
            android:text="@string/btnJString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnKString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnLString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" >
        <Button
            android:id="@+id/btnDot"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:onClick="onDecimalPoint"
            android:text="@string/dot"
            android:textSize="34sp"
            android:textColor="@color/calcBtnText"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:onClick="onDigit"
            android:text="@string/btnMString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:onClick="onEqual"
            android:layout_marginEnd="4dp"
            android:text="@string/btnNString"
            android:textSize="26sp"
            android:textColor="@color/calcBtnText"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>